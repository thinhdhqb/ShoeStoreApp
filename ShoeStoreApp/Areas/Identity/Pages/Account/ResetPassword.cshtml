@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}


@section Styles {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}


<div class="main-container container pt-3 h-100">
    <form class="mb-3 auth-form-container"  method="post">
        <h2>Đặt lại mật khẩu</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Input.Code" type="hidden" />
        <div class="mb-3 form-floating">
            <input asp-for="Input.Email" class="form-control" placeholder="" aria-required="true" />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-3 form-floating">
            <input asp-for="Input.Password" class="form-control" placeholder="" aria-required="true"/>
            <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="mb-3 form-floating">
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="" aria-required="true" />
            <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-dark w-100 p-3 mb-3">Đặt lại mật khẩu</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
