@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}


<!-- Main Container -->
<div class="main-container container pt-3 h-100">
    <form class="mb-3 auth-form-container" id="account" method="post">
        <h2>Đăng nhập</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 form-floating">
            <input type="email"
                   class="form-control"
                   id="email"
                   asp-for="Input.Email"
                   autocomplete="username" aria-required="true"
                   placeholder="Vui lòng email của bạn" />
            <label asp-for="Input.Email" class="form-label">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-3 form-floating">
            <input type="password"
                   class="form-control"
                   id="password"
                   asp-for="Input.Password"
                   placeholder="Vui lòng nhập mật khẩu" />
            <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="checkbox">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <button class="btn btn-dark w-100 p-3 mb-3" id="login-submit" type="submit">Đăng nhập</button>
        <div class="text-secondary">
            Quên mật khẩu ?
            <a id="forgot-password" asp-page="./ForgotPassword"
               class="link-primary link-underline link-underline-opacity-0">Đặt lại mật khẩu</a>
        </div>
        <div class="text-secondary">
            Chưa có tài khoản ?
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
               class="link-primary link-underline link-underline-opacity-0">Tạo tài khoản mới</a>
        </div>
        <div class="text-secondary">
            Tài khoản chưa xác thực ?
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link-primary link-underline link-underline-opacity-0">Gửi mail xác thực </a>
        </div>

        <div class="mt-5">
            <a href="/"
               class="link-dark link-underline link-underline-opacity-0">
                <i class="fa-solid fa-chevron-left"></i> Quay về trang
                chủ
            </a>
        </div>
    </form>

    <!-- List container -->
</div>
<!-- Main Container -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
