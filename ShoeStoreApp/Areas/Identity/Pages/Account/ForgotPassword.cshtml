@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu ?";
}

@section Styles {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}


<div class="main-container container pt-3 h-100">
    <form class="mb-3 auth-form-container" method="post">
        <h2 class="mb-3">Quên mật khẩu</h2>
        <div class="text-secondary mb-2">Vui lòng nhập email của bạn</div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 form-floating">
            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="" />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-dark w-100 p-3 mb-3">Khôi phục mật khẩu</button>
        </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
