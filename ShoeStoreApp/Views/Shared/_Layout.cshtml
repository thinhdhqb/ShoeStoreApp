<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoeStoreApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/45f15e8235.js"
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light" th:fragment="header">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Navbar brand -->
                <a class="navbar-brand" href="/">
                    Spring <i class="fa-solid fa-leaf"></i>
                </a>

                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse"
                     id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 fs-5">
                        <!-- Link -->
                        <li class="nav-item">
                            <a class="nav-link" href="/search?gender=men">NAM</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/search?gender=women">NỮ</a>
                        </li>
                    </ul>
                    <!-- Icons -->
                    <ul class="navbar-nav d-flex flex-row me-1">
                        <li class="nav-item me-3 me-lg-0">
                            <a class="nav-link" href="/cart">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </li>
                    </ul>
                    <!-- Search -->
                    <form class="w-auto me-1" id="search-form">
                        <i class="fa-solid fa-magnifying-glass"></i>
                        <input type="search"
                               class="form-control"
                               id="search"
                               placeholder="Search"
                               aria-label="Search" />
                    </form>
                    <button class="btn btn-outline-dark" id="search-btn">Tìm kiếm</button>


                </div>
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
            @RenderBody()
@*     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ShoeStoreApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/js/index.js" asp-append-version="true"></script>
    <script>
        $('#search').keypress(function (e) {
            if (e.which == 13) {
                console.log(e);
                let search = $('#search').val();
                let query = 'search.html?q=' + search;
                window.location.replace(query);
                return false;
            }
        })
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
