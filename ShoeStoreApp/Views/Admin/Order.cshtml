
@{
    ViewData["Title"] = "Order";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/45f15e8235.js"
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="~/css/admin-order.css" />
    <title>Order checkout complete!</title>
</head>
<body>
    <!-- Sidebar -->
    <div class="d-flex flex-column flex-shrink-0 bg-light sidebar"
         style="width: 4.5rem">
        <a href="/"
           class="d-block p-3 link-dark text-decoration-none text-center"
           title="Spring"
           data-bs-toggle="tooltip"
           data-bs-placement="right">
            <i class="fa-solid fa-leaf"></i>
            <span class="visually-hidden">Spring</span>
        </a>
        <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
            <li>
                <a href="#"
                   class="nav-link py-3 border-bottom rounded-0"
                   title="Dashboard"
                   data-bs-toggle="tooltip"
                   data-bs-placement="right">
                    <i class="bi bi-house-door"></i>
                </a>
            </li>
            <li>
                <a href="#"
                   class="nav-link active py-3 border-bottom rounded-0"
                   title="Orders"
                   data-bs-toggle="tooltip"
                   data-bs-placement="right">
                    <i class="bi bi-file-text"></i>
                </a>
            </li>
            <li>
                <a href="#"
                   class="nav-link py-3 border-bottom rounded-0"
                   title="Products"
                   data-bs-toggle="tooltip"
                   data-bs-placement="right">
                    <i class="bi bi-cart"></i>
                </a>
            </li>
            <li>
                <a href="#"
                   class="nav-link py-3 border-bottom rounded-0"
                   title="Customers"
                   data-bs-toggle="tooltip"
                   data-bs-placement="right">
                    <i class="bi bi-person"></i>
                </a>
            </li>
        </ul>
        <div class="text-center">
            <a href="#"
               class="nav-link py-3 border-bottom rounded-0"
               title="Sign out"
               data-bs-toggle="tooltip"
               data-bs-placement="right">
                <i class="bi bi-box-arrow-right"></i>
            </a>
        </div>
    </div>

    <!-- Main -->
    <main class="px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Đơn hàng</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary">
                        Export
                    </button>
                </div>
            </div>
        </div>
        <div class="d-flex nav-option mb-3">
            <input type="text"
                   name=""
                   id=""
                   class="form-control w-75"
                   placeholder="Tìm kiếm theo id, tên, hãng, ..." />
            <button class="btn btn-dark" id="btn-search">Tìm kiếm</button>
            <button class="btn btn-success">
                Hoàn thành đơn
            </button>
            <button class="btn btn-primary">
                Xác nhận đơn
            </button>
            <button class="btn btn-danger">Hủy đơn</button>
        </div>
        <table class="table table-hover w-100 align-middle">
            <colgroup>
                <col span="1" style="width: 0%; min-width: 40px" />
                <col span="1" style="width: 0%; min-width: 40px" />
                <col span="1" style="width: 0%; min-width: 180px" />
                <col span="1" style="width: 0%; min-width: 200px" />
                <col span="1" style="width: 100%" />
                <col span="1" style="width: 0%; min-width: 140px" />
                <col span="1" style="width: 0%; min-width: 200px" />
                <col span="1" style="width: 0%; min-width: 350px" />
                <col span="1" style="width: 0%; min-width: 40px" />
            </colgroup>

            <thead class="text-uppercase">
            <th></th>
            <th>Id</th>
            <th>Trạng thái</th>
            <th>Tên khách hàng</th>
            <th>Địa chỉ giao</th>
            <th>Thành tiền</th>
            <th>Ngày tạo</th>
            <th>Sản phẩm</th>
            <th></th>
            </thead>
            <tbody class="table-group-divider">
                <tr>
                    <td>
                        <input class="form-check-input" type="checkbox" />
                    </td>
                    <td>1</td>
                    <td><div class="status status-pending">CHỜ XÁC NHẬN</div></td>
                    <td>Nguyễn Văn A</td>
                    <td class="text-truncate" style="max-width: 1px">1 Nguyễn Hữu Thọ, Quận 7, TP HCM</td>
                    <td>3,239,000₫</td>
                    <td>
                        12:30:03 24/11/2003
                    </td>
                    <td>
                        x1 Nike Air Max 270 - Trắng - 40
                        <br>
                        x1 Nike Air Max 270 - Trắng - 40
                    </td>
                    <td>
                        <span class="btn-delete">
                            <i class="bi bi-trash-fill"></i>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input class="form-check-input" type="checkbox" />
                    </td>
                    <td>1</td>
                    <td><div class="status status-cancelled">ĐÃ HỦY</div></td>
                    <td>Nguyễn Văn A</td>
                    <td class="text-truncate" style="max-width: 1px">1 Nguyễn Hữu Thọ, Quận 7, TP HCM</td>
                    <td>3,239,000₫</td>
                    <td>
                        12:30:03 24/11/2003
                    </td>
                    <td>
                        x1 Nike Air Max 270 - Trắng - 40
                        <br>
                        x1 Nike Air Max 270 - Trắng - 40
                    </td>
                    <td>
                        <span class="btn-delete">
                            <i class="bi bi-trash-fill"></i>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input class="form-check-input" type="checkbox" />
                    </td>
                    <td>1</td>
                    <td><div class="status status-done">ĐÃ HOÀN THÀNH</div></td>
                    <td>Nguyễn Văn A</td>
                    <td class="text-truncate" style="max-width: 1px">1 Nguyễn Hữu Thọ, Quận 7, TP HCM</td>
                    <td>3,239,000₫</td>
                    <td>
                        12:30:03 24/11/2003
                    </td>
                    <td>
                        x1 Nike Air Max 270 - Trắng - 40
                        <br>
                        x1 Nike Air Max 270 - Trắng - 40
                    </td>
                    <td>
                        <span class="btn-delete">
                            <i class="bi bi-trash-fill"></i>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input class="form-check-input" type="checkbox" />
                    </td>
                    <td>1</td>
                    <td><div class="status status-delivering">ĐANG VẬN CHUYỂN</div></td>
                    <td>Nguyễn Văn A</td>
                    <td class="text-truncate" style="max-width: 1px">1 Nguyễn Hữu Thọ, Quận 7, TP HCM</td>
                    <td>3,239,000₫</td>
                    <td>
                        12:30:03 24/11/2003
                    </td>
                    <td>
                        x1 Nike Air Max 270 - Trắng - 40
                        <br>
                        x1 Nike Air Max 270 - Trắng - 40
                    </td>
                    <td>
                        <span class="btn-delete">
                            <i class="bi bi-trash-fill"></i>
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>
        @{
            var prevDisabled = !Model.PaginatedListCustomer.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.PaginatedListCustomer.HasNextPage ? "disabled" : "";
        }
        <nav class="d-flex">
            <div class="info text-secondary me-auto">
                Hiển thị @(Model.PaginatedListCustomer.PageIndex) - @(Model.PaginatedListCustomer.PageIndex * 10) của
                @(Model.PaginatedListCustomer.Count) sản phẩm
            </div>
            <ul class="pagination">
                <li class="page-item">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PaginatedListCustomer.PageIndex - 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link @prevDisabled">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PaginatedListCustomer.PageIndex + 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link @nextDisabled">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        <nav class="d-flex">
            <div class="info text-secondary me-auto">
                Hiển thị 1-10 của 100 sản phẩm
            </div>
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </main>

</body>
<script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js"
        integrity="sha384-uO3SXW5IuS1ZpFPKugNNWqTZRRglnUJK6UAZ/gxOX80nxEkN9NcGZTftn6RzhGWE"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"
        integrity="sha384-zNy6FEbO50N+Cg5wap8IKA4M/ZnLJgzc6w2NqACZaK0u0FXfOWRRJOnQtpZun8ha"
        crossorigin="anonymous"></script>
<script src="~/js/admin.js"></script>
</html>


